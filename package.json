{
	"$schema": "https://json.schemastore.org/package",
	"name": "ts-kickstart",
	"type": "module",
	"private": true,
	"scripts": {
		"all:build": "turbo run build",
		"all:check-ts": "turbo run check-ts",
		"all:dev": "turbo run dev",
		"all:test": "turbo run test",
		"check": "biome check .",
		"check:apply": "biome check --apply .",
		"package:bump": "changeset add",
		"package:publish": "bun run all:build && changeset publish"
	},
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "1.5.3",
		"@changesets/cli": "^2.27.1",
		"@types/bun": "^1.0.5",
		"turbo": "^1.12.4"
	},
	"peerDependencies": {
		"typescript": "~5.0.0"
	},
	"packageManager": "bun@1.0.26",
	"workspaces": ["packages/*"]
}
